# TissueMNIST Comparative Study - Environment Configuration
# Copy this file to .env and modify values as needed
# cp .env.example .env

# Dataset Configuration
# Path to the dataset directory (relative to project root or absolute path)
DATASET_PATH=mnist_dataset

# Image size for model input (224 for ImageNet pretrained models)
IMAGE_SIZE=224

# Training Hyperparameters
# Number of training epochs (early stopping may stop training earlier)
NUM_EPOCHS=15

# Batch size for training/validation/test
BATCH_SIZE=128

# Learning rate for SGD optimizer
LEARNING_RATE=0.001

# SGD momentum
MOMENTUM=0.9

# L2 regularization (weight decay)
WEIGHT_DECAY=0.0001

# Use ImageNet pretrained weights (true/false)
USE_PRETRAINED=true

# Early Stopping Configuration
# Number of epochs to wait before stopping if no improvement
EARLY_STOPPING_PATIENCE=3

# Minimum change in validation loss to qualify as improvement
EARLY_STOPPING_MIN_DELTA=0.001

# Reproducibility
# Random seed for reproducibility (set to -1 to disable)
RANDOM_SEED=42

# DataLoader Configuration
# Number of worker processes for data loading
# Set to 0 on macOS to avoid multiprocessing issues
# Recommended: 4 for CUDA, 2 for CPU, 0 for macOS
NUM_WORKERS=4

# Pin memory for faster GPU transfer (only effective with CUDA)
PIN_MEMORY=true

# Model Selection
# Comma-separated list of models to train
# Available models: ResNet18, ResNet50, DenseNet121, EfficientNet-B0, ViT-B/16, Swin-Tiny, Swin-Base
# Example: MODELS_TO_TRAIN=ResNet18,ResNet50,ViT-B/16
MODELS_TO_TRAIN=ResNet18,ResNet50,DenseNet121,EfficientNet-B0,ViT-B/16,DeiT-Tiny,DeiT-Base,Swin-Tiny,Swin-Base

# Directory Paths
# Directory to save trained model checkpoints
MODEL_SAVE_DIR=saved_models_comparative

# Directory to save results, reports, and visualizations
RESULTS_DIR=results_comparative

# Subdirectory within RESULTS_DIR for research paper deliverables
PAPER_DIR=paper_deliverables

# Directory for TensorBoard logs
TENSORBOARD_LOG_DIR=runs

# Model Saving Configuration
# Save model checkpoints (true/false)
SAVE_MODELS=true

# Research Paper Deliverables
# Save research paper deliverables (tables, figures, sample images) (true/false)
SAVE_PAPER_DELIVERABLES=true

# Device Configuration
# Device to use for training (auto/cuda/cpu)
# 'auto' will automatically detect CUDA availability
DEVICE=auto

# Advanced Settings
# Train/validation split ratio (0.8 = 80% train, 20% validation)
TRAIN_VAL_SPLIT=0.8

# Enable mixed precision training for transformer models (true/false)
# Automatically enabled for ViT and Swin models
USE_MIXED_PRECISION=true

# Gradient clipping max norm (for transformer models)
GRADIENT_CLIP_NORM=1.0

# Logging and Monitoring
# Enable TensorBoard logging (true/false)
ENABLE_TENSORBOARD=true

# Verbose output during training (true/false)
VERBOSE=true
